@model IEnumerable<SWNI.Entities.Employee>
@{
    ViewBag.Title = "Employees";
}

<h1>@ViewBag.Title</h1>

@Html.ActionLink("New Employee", "Create", "Employees", null, new { @class="text-right" })
<table class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Designation
            </th>
            <th>
                Date Added
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Designation</td>
                    <td>@item.DateCreated</td>
                    <td>@Html.ActionLink("Edit", "Edit")</td>
                </tr>
            }
        }

    </tbody>
</table>

