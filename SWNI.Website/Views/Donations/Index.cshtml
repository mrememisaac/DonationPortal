@model SWNI.Website.Models.DonationViewModel
@{
    ViewBag.Title = "Donation Analysis";
}

<h1>@ViewBag.Title</h1>

<div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
        <div class="panel-heading">Total Donation</div>
        <div class="panel-body">

            <table class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th >
                            Receipts
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-right">@String.Format("{0:n}", Model.Receipts)</td>                      
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
        <div class="panel-heading">@DateTime.Now.Year Totals</div>
        <div class="panel-body">

            <table class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            This Year
                        </th>
                        <th>
                            This Quarter
                        </th>
                        <th>
                            This Month
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-right">@String.Format("{0:n}", Model.ThisYearsDonation)</td>
                        <td class="text-right">@String.Format("{0:n}", Model.ThisQuartersDonation)</td>
                        <td class="text-right">@String.Format("{0:n}", Model.ThisMonthsDonation)</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
        <div class="panel-heading">@DateTime.Now.Year Donation by month</div>
        <div class="panel-body">

            <table class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Month
                        </th>
                        <th class="text-right">
                            Earnings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model.MonthlyDonation)
                        {
                            <tr>
                                <td>@item.Month</td>
                                <td class="text-right">@String.Format("{0:n}", item.Donation)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
        <div class="panel-heading">@DateTime.Now.Year Donation by Quarter</div>
        <div class="panel-body">

            <table class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Quarter
                        </th>
                        <th class="text-right">
                            Earnings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model.QuarterlyDonation)
                        {
                            <tr>
                                <td>@item.Quarter</td>
                                <td class="text-right">@String.Format("{0:n}", item.Donation)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
        <div class="panel-heading">@DateTime.Now.AddYears(-4).Year - @DateTime.Now.Year Donation</div>
        <div class="panel-body">

            <table class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Year
                        </th>
                        <th class="text-right">
                            Earnings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model.AnnualDonation)
                        {
                            <tr>
                                <td>@item.Year</td>
                                <td class="text-right">@String.Format("{0:n}", item.Donation)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="clearfix"></div>